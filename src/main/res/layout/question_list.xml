<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bcd5d1">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="What is your name? And how are you Doing? All Fine or not?"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_yourAnswer"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="#b4fc7039"
                android:text="What is your name? And how are you Doing? All Fine or not?"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_correctAnswer"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                android:background="#81398014"
                android:elevation="10dp"

                android:text="What is your name? And how are you Doing? All Fine or not?"
                android:textColor="#c8ffffff" />


        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
