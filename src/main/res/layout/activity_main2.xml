<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9ece5"
    tools:context="com.example.shubham_pc.aptitudecracker.Main2Activity">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:minHeight="50dp"
        android:minWidth="50dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="500dp"
        android:layout_height="700dp"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:background="#c5d5cb"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fae596"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qno"
                android:layout_width="43dp"
                android:layout_height="41dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="1"
                android:textColor="#a8b6bf"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="What is your name? And how are you Doing? All Fine or not?"
                android:textSize="17sp" />

            <RadioGroup
                android:id="@+id/rg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="330dp"
                    android:layout_height="40dp"
                    android:checked="true"
                    android:text="Fine"
                    android:textColor="#c5000000" />

                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="330dp"
                    android:layout_height="40dp"
                    android:text="Good :)"
                    android:textColor="#c5000000" />

                <RadioButton
                    android:id="@+id/rb3"
                    android:layout_width="330dp"
                    android:layout_height="40dp"
                    android:text="Very Very Very Good "
                    android:textColor="#c5000000" />

                <RadioButton
                    android:id="@+id/rb4"
                    android:layout_width="330dp"
                    android:layout_height="40dp"
                    android:text="Yayyy... Awesome Hot ...... "
                    android:textColor="#c5000000" />
            </RadioGroup>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/bt_next"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/cardView"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="39dp"
        android:background="#e63b3a36"
        android:text="Next"
        android:textColor="#e7ffffff" />

    <Button
        android:id="@+id/submit"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/bt_next"
        android:layout_alignBottom="@+id/bt_next"
        android:layout_marginRight="70dp"
        android:layout_marginStart="42dp"
        android:layout_toEndOf="@+id/bt_next"
        android:background="#e63b3a36"
        android:text="Submit"
        android:textColor="#e7ffffff" />

</RelativeLayout>
